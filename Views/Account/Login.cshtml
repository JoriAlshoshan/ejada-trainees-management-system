@using EjadaTraineesManagementSystem.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box shadow">
        <h2 class="text-center mb-4 text-primary">Welcome Back</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label ms-1" for="rememberMe">
                        Remember me
                    </label>
                </div>
                <a asp-controller="Account" asp-action="VerifyEmail" class="small text-decoration-none">
                    Forgot Password?
                </a>
            </div>

            <button type="submit" class="btn w-100 p-2 login-button">Login</button>

            <div class="text-center mt-3">
                <p>
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
                </p>
                <a asp-controller="Account" asp-action="Welcome" class="text-muted text-decoration-none">
                    ‚Üê Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
