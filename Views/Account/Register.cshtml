@using EjadaTraineesManagementSystem.ViewModels
@model RegisterViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Register"];
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    .account-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background: #f9f9f9;
    }

    .account-box {
        background: #fff;
        padding: 40px 50px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        max-width: 420px;
        width: 100%;
        font-family: 'Poppins', sans-serif;
    }

        .account-box h2 {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 30px;
            color: #007bff;
        }

        .account-box .form-control {
            font-size: 1rem;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1.5px solid #ced4da;
            transition: border-color 0.3s ease;
        }

            .account-box .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0,123,255,0.3);
            }

        .account-box .text-danger {
            font-size: 0.875rem;
        }

    .btn-primary {
        background: #007bff;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 8px;
        border: none;
        transition: background-color 0.3s ease;
        padding: 12px 0;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .text-center p {
        font-size: 0.95rem;
    }

    a.text-decoration-none {
        color: #007bff;
        transition: color 0.2s ease;
    }

        a.text-decoration-none:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    .text-muted {
        font-size: 0.85rem;
        margin-top: 10px;
        display: block;
    }
</style>

<div class="account-container">
    <div class="account-box shadow">
        <h2 class="text-center">@Localizer["Create an Account"]</h2>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">@Localizer["Full Name"]</label>
                <input asp-for="Name" class="form-control" placeholder="@Localizer["Your full name"]" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">@Localizer["Confirm Password"]</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="********" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">@Localizer["Register"]</button>

            <div class="text-center mt-3">
                <p>
                    @Localizer["Already have an account?"]
                    <a asp-controller="Account" asp-action="Login" class="text-decoration-none">@Localizer["Login"]</a>
                </p>
                <a asp-controller="Account" asp-action="Welcome" class="text-muted text-decoration-none">
                    ‚Üê @Localizer["Back to Home"]
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
