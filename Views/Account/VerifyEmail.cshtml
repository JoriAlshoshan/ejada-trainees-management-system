@using EjadaTraineesManagementSystem.ViewModels
@model VerifyEmailViewModel

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box shadow">
        <h2 class="text-center mb-4 text-primary">Verify Email</h2>

        <form asp-action="VerifyEmail" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <input type="submit" value="Verify" class="btn btn-success w-100 p-2" />

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none">‚Üê Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

