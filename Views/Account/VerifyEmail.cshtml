@using EjadaTraineesManagementSystem.ViewModels
@model VerifyEmailViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Verify Email"];
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    .account-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background: #f9f9f9;
    }

    .account-box {
        background: #fff;
        padding: 40px 50px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        max-width: 420px;
        width: 100%;
        font-family: 'Poppins', sans-serif;
    }

        .account-box h2 {
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 30px;
            color: #28a745;
        }

        .account-box .form-control {
            font-size: 1rem;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1.5px solid #ced4da;
            transition: border-color 0.3s ease;
        }

            .account-box .form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 8px rgba(40,167,69,0.3);
            }

        .account-box .text-danger {
            font-size: 0.875rem;
        }

    .btn-success {
        background: #28a745;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 8px;
        border: none;
        transition: background-color 0.3s ease;
        padding: 12px 0;
    }

        .btn-success:hover {
            background: #1e7e34;
        }

    .text-center a {
        color: #28a745;
        transition: color 0.2s ease;
        text-decoration: none;
        font-size: 0.95rem;
    }

        .text-center a:hover {
            color: #1e7e34;
            text-decoration: underline;
        }
</style>

<div class="account-container">
    <div class="account-box shadow">
        <h2 class="text-center">@Localizer["Verify Email"]</h2>

        <form asp-action="VerifyEmail" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <input type="submit" value="@Localizer["Verify"]" class="btn btn-success w-100 p-2" />

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none">‚Üê @Localizer["Back to Login"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


