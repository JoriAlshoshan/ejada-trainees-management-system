@model IEnumerable<EjadaTraineesManagementSystem.Models.Trainee>

@{
    ViewData["Title"] = "Trainees Management";
}

<h1 class="main-title">Trainees Management</h1>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TraineeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.University.UniversityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeName)
            </td>
            <td>
                <img src="Images/@item.ImageUser" style="width:35px;height:35px">
            </td>
            <td>
                    @item.StartDate.ToString("yyyy-MM-dd")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University.UniversityName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.TraineeId" title="Edit">
                        <i class="fas fa-edit" style="color:dimgray;"></i>
                    </a>
                    &nbsp;
                    <a asp-action="Delete" asp-route-id="@item.TraineeId"
                       onclick="return confirm('Are you sure you want to delete this record? This action cannot be undone')"
                       title="Delete">
                        <i class="fas fa-trash-alt" style="color:darkred;"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

